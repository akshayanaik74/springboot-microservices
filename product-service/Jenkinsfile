pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                sh /etc/profile.d/gradle.sh
                sh 'gradle assemble'
            }
        }
 //       stage('Test') {
 //          steps {
 //               sh 'gradle test'
//            }
 //       }
        stage('Build Docker image') {
            steps {
                sh 'gradle docker'
            }
        }
        stage('Run Docker Image') {
            steps {
                sh 'gradle dockerRun'
            }
        }
    }
}
